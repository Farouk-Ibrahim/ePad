<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_activate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.farouk.jackretary.Activate"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_green_dark"
            android:weightSum="1">

            <ImageView
                android:src="@drawable/eduserieslogo"
                android:layout_width="55dp"
                android:layout_height="64dp"
                android:id="@+id/imageView3" />

            <TextView
                android:text="Activation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="1"
            android:layout_marginTop="70dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trialCount"
                android:layout_weight="0.47"
                android:layout_marginBottom="30dp" />

            <TextView
                android:text="Activate for just NGN100 and start jacking on the go!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activationMessage"
                android:layout_weight="0.47"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/activationKey"
                android:hint="Enter Activation Key"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:layout_weight="0.47"
                android:layout_marginLeft="30dp" />

            <Button
                android:text="Activate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activationButton"
                android:onClick="onActivate" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
